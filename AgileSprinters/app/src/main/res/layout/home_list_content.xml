<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/habit_date_textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="50"
                android:layout_marginLeft="6dp"
                android:gravity="left"
                android:text="Date"

                />

            <TextView
                android:id="@+id/privacy_setting_list"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="50"
                android:gravity="right"
                android:text = "Privacy Setting"
                android:layout_marginRight="6dp"
                />
            <!--                android:text="Tags to be added later"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/habit_list_title_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:text="Habit Title"
                android:layout_weight="50"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/habit_list_reason_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Habit Reason"
                android:layout_marginRight="6dp"
                android:layout_weight="50"
                android:textStyle="italic"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:layout_weight="50"
                android:layout_marginLeft="6dp"
                android:layout_gravity="left"
                android:text = "@string/PROGRESS_STR" />

            <ProgressBar
                android:id="@+id/habit_list_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="50"
                android:layout_marginRight="6dp"
                android:gravity="left"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>